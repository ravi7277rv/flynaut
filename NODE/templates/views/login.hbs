<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login User</title>
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
    <div class="container">
        <div class="formcontainer">
            <h1>Login User</h1>
            <form action="/"  method="post">
                <label>User Email</label>
                <input type="email" name="email" placeholder="demo@gmail.com">
                <label>Password</label>
                <input type="password" name="password" placeholder="passowrd">
                <button class="btn btn-primary">Login</button>
            </form>
            <p>Don't have Account &nbsp; <a href="/signup">SignUp</a></p>
             {{#if message}}
            <p id="loginError">{{message}}</p>
            {{/if}}
        </div>
    </div>
</body>
<script>
   let signupError = document.getElementById('loginError');

    function changeStyle(){
        signupError.style.display = "none";
    }
    setTimeout(changeStyle,3000)
</script>
</html>